{
	"kind": "DeploymentConfig",
	"metadata": {
		"labels": {
			"app": "sprint-api",
			"product": "microservices-scrum"
		},
		"name": "sprint-api"
	},
	"spec": {
		"strategy": {
			"type": "Recreate"
		},
		"replicas": "1",
		"revisionHistoryLimit": "10",
		"selector": {
			"app": "sprint-api",
			"deploymentconfig": "sprint-api"
		},
		"template": {
			"metadata": {
				"labels": {
					"app": "sprint-api",
					"deploymentconfig": "sprint-api"
				}
			},
			"spec": {
				"containers": [
					{
						"env": [
							{
								"name": "JBOSS_A_MQ_BROKER_PASSWORD",
								"value": "amq"
							},
							{
								"name": "JBOSS_A_MQ_BROKER_URL",
								"value": "tcp://broker-amq-tcp.prod.svc:61616"
							},
							{
								"name": "JBOSS_A_MQ_BROKER_USER",
								"value": "amq"
							},
							{
								"name": "SPRINT_API_DB_PASSWORD",
								"value": "welcome1"
							},
							{
								"name": "SPRINT_API_DB_USER",
								"value": "postgres"
							},
							{
								"name": "SPRINT_API_JDBC_URL",
								"value": "jdbc:postgresql://postgresql.prod.svc:5432/prod-sprint-api"
							},
							{
								"name": "JAEGER_SAMPLER_TYPE",
								"value": "const"
							},
							{
								"name": "JAEGER_SAMPLER_PARAM",
								"value": "1"
							},
							{
								"name": "JAEGER_SAMPLER_MANAGER_HOST_PORT",
								"value": "jaeger-agent.prod.svc:5778"
							},
							{
								"name": "JAEGER_AGENT_HOST",
								"value": "jaeger-agent.prod.svc"
							}
						],
						"name": "sprint-api",
						"image": "docker-registry.default.svc:5000/prod/sprint-api:latest",
						"imagePullPolicy": "Always",
						"ports": [
							{
								"containerPort": "8080",
								"protocol": "TCP"
							},
							{
								"containerPort": "8443",
								"protocol": "TCP"
							},
							{
								"containerPort": "8778",
								"protocol": "TCP"
							}
						],
						"readinessProbe": {
							"failureThreshold": "10",
							"initialDelaySeconds": "90",
							"periodSeconds": "30",
							"successThreshold": "1",
							"timeoutSeconds": "1",
							"httpGet": {
								"path": "/api",
								"port": 8080,
								"scheme": "HTTP"
							}
						},
						"resources": {
							"limits": {
								"cpu": "1000m",
								"memory": "400Mi"
							},
							"requests": {
								"cpu": "50m",
								"memory": "50Mi"
							}
						}
					}
				]
			}
		}
	}
}